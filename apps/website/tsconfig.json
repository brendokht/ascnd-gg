{
  "extends": "@ascnd-gg/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ascnd-gg/website/*": ["./src/*"],
      "@ascnd-gg/ui/*": ["../../packages/ui/src/*"],
      "@ascnd-gg/types": ["../../packages/types/src/index.ts"],
      "@ascnd-gg/auth": ["../../packages/auth/src/auth.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  // "exclude": ["node_modules", "eslint.config.js"],
  "exclude": ["node_modules"]
}
