{
  "name": "@ascnd-gg/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./*": "./src/*.tsx"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint . --max-warnings 0",
      "prettier --write .",
      "tsc --noEmit"
    ],
    "*.{css,scss,md}": [
      "prettier --write ."
    ]
  },
  "devDependencies": {
    "@ascnd-gg/eslint-config": "workspace:*",
    "@ascnd-gg/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
