{
  "name": "@ascnd-gg/auth",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/auth.js",
  "types": "./dist/auth.d.ts",
  "exports": {
    ".": {
      "default": "./dist/auth.js",
      "types": "./dist/auth.d.ts"
    }
  },
  "scripts": {
    "ts:build": "tsc --build tsconfig.build.json",
    "ts:build-watch": "tsc --build tsconfig.build.json --watch",
    "db:generate": "pnpx @better-auth/cli@latest generate --output '../database/prisma/schema.prisma' --yes",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@ascnd-gg/constants": "workspace:^",
    "@ascnd-gg/database": "workspace:*",
    "better-auth": "^1.3.8",
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@ascnd-gg/eslint-config": "workspace:*",
    "@ascnd-gg/typescript-config": "workspace:*",
    "@types/node": "^24.3.1"
  }
}
