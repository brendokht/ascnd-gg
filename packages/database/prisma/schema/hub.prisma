model Hub {
  id          String   @id @default(uuid(7))
  hubOwnerId  String
  hubOwner    User     @relation(fields: [hubOwnerId], references: [id], onDelete: Cascade)
  name        String   @unique
  displayName String
  logo        String?
  banner      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  events Event[]
  members     UserHub[]
  invitations HubInvite[]

  @@map("hub")
}

model UserHub {
  hubId     String
  hub       Hub      @relation(fields: [hubId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@id([hubId, userId])
  @@map("user_hub")
}