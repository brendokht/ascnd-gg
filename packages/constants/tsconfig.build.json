    "declaration": true,
    "composite": true,
    "incremental": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "module": "nodenext",
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "watchOptions": {
    "watchDirectory": "usefsevents"
  }
}
